<%= render_navbar("courses", @schedule) %>

<% if @courses.empty? %>
    <p class="container h1 text-secondary">No courses added to this schedule!</p>
<% else %>
<div class="container border-2 border-dark">
  
    <table class="table col-8 border-2 border-dark table-hover table-bordered">
        <thead class="table-dark">
            <tr>
            <th scope="col"><%= sortable "subject", "Subject" %></th>
            <th scope="col"><%= sortable "course_number", "Course Number" %></th>
            <th scope="col"><%= sortable "title", "Title" %></th>
            <th scope="col"><%= sortable "lec_hours", "Lecture Hours" %></th>
            <th scope="col"><%= sortable "lec_hours", "Lecture Hours" %></th>
            </tr>
        </thead>
        <tbody>
            <% @courses.each do |course| %>
            <tr>
                <td><%= course.subject %></td>
                
                <td><%= course.course_number %></td>
                <td><%= course.title %></td>
                <td><%= course.lec_hours %></td>
                <td><%= course.lab_hours %></td>
                
                
            </tr>
            <% end %>
        </tbody>
    </table>
</div>
<% end %>


