<h2>Howdy <%= @current_user.first_name %>!</h2>
<div id="user-details">
  <p>
    <strong>Email:</strong>
    <%= @current_user.email %>
  </p>

  <p>
    <strong>First Name:</strong>
    <%= @current_user.first_name %>
  </p>

  <p>
    <strong>Last Name:</strong>
    <%= @current_user.last_name %>
  </p>

  <h2>Upload CSV File</h2>
  <%= form_with url: "/upload_csv", local: true, html: { multipart: true } do |form| %>
    <%= form.file_field :csv_file, accept: ".csv" %>
    <br>
    <%= form.submit "Submit" %>
  <% end %>

  <%= link_to "Logout", logout_path %>
</div>

