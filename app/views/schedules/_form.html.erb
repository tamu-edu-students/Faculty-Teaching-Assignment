<%= form_with(model: schedule, local: true, class: "p-4") do |form| %>
  <% if schedule.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(schedule.errors.count, "error") %> prohibited this schedule from being saved:</h4>
      <ul>
        <% schedule.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :schedule_name, class: "form-label fw-bold" %>
    <%= form.text_field :schedule_name, class: "form-control", placeholder: "Enter schedule name" %>
  </div>

  <div class="mb-3">
    <%= form.label :semester_name, class: "form-label fw-bold" %>
    <%= form.text_field :semester_name, class: "form-control", placeholder: "Enter semester name" %>
  </div>

  <div class="d-grid">
    <%= form.submit "Save Schedule", class: "btn btn-primary" %>
  </div>

<% end %>
