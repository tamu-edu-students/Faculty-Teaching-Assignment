<!-- app/views/schedules/index.html.erb -->

<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Schedules you are working on</h1>
    <%= link_to "Create a New Schedule", new_schedule_path, class: "btn btn-dark" %>
  </div>

  <!-- Search bar -->
  <div class="input-group mb-4">
    <input type="text" class="form-control" placeholder="Search a schedule" aria-label="Search a schedule">
    <button class="btn btn-outline-secondary" type="button">Search</button>
  </div>

  <!-- Loop through each schedule in the database -->
  <% @schedules.each do |schedule| %>
    <div class="container">
      <div class="card  sched-card">
        <div style="transform: rotate(0);">
          <div class="card-header"><h4><%= schedule.schedule_name %><h5></div>
          <div class="card-body" >
            Semester: <%= schedule.semester_name %><br>Some Info about the schedule
            <%= link_to '', schedule_path(schedule), class: 'stretched-link'  %>        
          </div>
        </div>
        <div style="margin-bottom:5px; margin-left:5px">
          <%= button_to 'Delete', schedule_path(schedule), method: :delete, class: 'btn btn-danger btn-sm float-left' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
